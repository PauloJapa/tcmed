    var login = true;

    function getLogin(){
        var email = module.Cookie.get('EMAIL');
        if(email != ''){
            $('#email').val(email);
        }
    }
        
    function isValid(){
        if($('#email').val() == '' || $('#password').val() == ''){
            alert('Digite um login e senha!!');
            return false;
        }
        
        var se = module.Cookie.get('PHPSESSID');
        //retirar o login do cookie
        aux = se.split("param");
        module.Cookie.set({name : 'SESSAO', value : aux[0] , expires : '0'});
        module.Cookie.set({name : 'LOGIN', value : $('#email').val(), expires : '0'});
        module.Cookie.set({name : 'PHPSESSID', value : aux[0] + 'param' + $('#email').val(), expires : '0'});
        
        if($('#remember').is(':checked')){
            module.Cookie.set({name : 'EMAIL', value : $('#email').val(), expires : '0'});
        }
        
        return true;
    }
    setTimeout("getLogin()",1000);
</script>